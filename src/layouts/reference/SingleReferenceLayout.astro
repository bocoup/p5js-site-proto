---
const {
  frontmatter: { title, module, submodule, example },
} = Astro.props;
import CodeEmbed from "@components/reference/CodeEmbed/";
import InteractiveComponentTest from "@components/InteractiveComponentTest/";
---

<html>
  <h1>{title}</h1>
  <h2>Module: {module}</h2>
  <p>Submodule: {submodule}</p>
  <br />
  <!-- This is the actual MDX content: -->
  <slot />
  <hr />
  <h3>Example code rendered with a preact component</h3>
  <CodeEmbed code={example} />

  <h3>This is an interactive component that uses preact hooks</h3>
  <InteractiveComponentTest client:idle />


</html>
